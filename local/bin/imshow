#!/usr/bin/env python

import argparse
import math
import platform

import cv2
import fcn


def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('img_files', nargs='+', help='Image file to show.')
    args = parser.parse_args()

    imgs = [cv2.imread(img_file)[:, :, ::-1] for img_file in args.img_files]
    viz = fcn.utils.get_tile_image(imgs)

    H, W = viz.shape[:2]
    scale_H = 900. / H
    scale_W = 1800. / W
    scale = min(scale_H, scale_W)
    viz = cv2.resize(viz, None, None, fx=scale, fy=scale)

    cv2.imshow(__file__, viz[:, :, ::-1])
    cv2.waitKey(0)



if __name__ == '__main__':
    main()
