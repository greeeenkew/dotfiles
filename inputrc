# vim: set ft=readline:

set editing-mode vi
set keymap vi-command
"gg": beginning-of-history
"G": end-of-history
"1": beginning-of-line
"0": end-of-line
set keymap vi-insert
"jj": vi-movement-mode
"\C-d": delete-char
"\C-f": forward-char
"\C-b": backward-char
"\C-k": kill-line
"\C-p": history-search-backward
"\C-n": history-search-forward
"\C-j": vi-movement-mode
"\C-a": beginning-of-line
"\C-e": end-of-line
"\C-y": yank
"\C-l": clear-screen
set keymap vi
set convert-meta on
